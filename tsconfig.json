{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "declaration": false,
        "skipLibCheck": true,
        "lib": ["ESNext", "DOM.Iterable"],
        "module": "ES2022",
        "moduleResolution": "node",
        "outDir": "dist",
        "target": "ES2020"
    },
    "include": ["src"],
    "exclude": ["dist"]
}
